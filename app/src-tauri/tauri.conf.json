{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Guild Wars 2 Sightseeing",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": ["$DOCUMENT/Guild Wars 2/Screens/*"]
      },
      "shell": {
        "open": true
      },
      "fs": {
        "scope": ["*"],
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "removeFile": true
      },
      "http": {
        "scope": [
          "https://api.guildwars2.com/*",
          "http://localhost:3000/*",
          "http://localhost:3001/*",
          "https://gw2-sightseeing-app.s3.us-west-2.amazonaws.com/*",
          "https://gw2-sightseeing-api.mael.tech/*",
          "https://o304997.ingest.sentry.io/*",
          "https://gw2-sightseeing.maael.xyz/*"
        ],
        "all": true
      },
      "path": {
        "all": true
      },
      "window": {
        "setTitle": true,
        "minimize": true,
        "maximize": true,
        "setAlwaysOnTop": true,
        "unmaximize": true,
        "unminimize": true,
        "close": true,
        "setPosition": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.maael.gw2-sightseeing-app",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost https://gw2-sightseeing-app.s3.us-west-2.amazonaws.com https://gw2-sightseeing.maael.xyz"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Guild Wars 2 | Sightseeing",
        "width": 800,
        "transparent": true,
        "alwaysOnTop": true,
        "decorations": false
      }
    ]
  }
}
